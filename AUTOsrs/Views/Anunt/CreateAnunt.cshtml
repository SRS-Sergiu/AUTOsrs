@model AUTOsrs.ViewModels.AnuntGeneralViewModel

@{
    ViewBag.Title = "CreateAnunt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="page_add_anunt">
        <div class="col-xs-3 add_anunt_info car_search">
            <div class="car_search_top1">
                <div class="car_search_img">
                    <i class="fa fa-info"></i>
                    <h1>Contacteaza-ne!</h1>
                </div>
                <div class="ajutor1">
                    
                    <p>Ai nevoie de ajutor?</p>
                </div>
                <div class="ajutor2">
                    <a href="tel: +407 4567 2523"><span>Tel:</span><span>+407 4567 2523</span></a>
                </div>
                <div class="ajutor3">
                    <a href="mailto: sergiu_r0bert@yahoo.com"><span>Mail:</span><span>AutoSRS@office.com</span></a>
                </div>
            </div>
            <div class="btn-back">
                @Html.ActionLink("Back to List", "IndexAnunt")
            </div>
        </div>
        <div class="col-xs-9">
            @using (Html.BeginForm("CreateAnunt", "Anunt", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Creare anunt</h4>
                    <hr />



                    @Html.HiddenFor(model => model.ID_Anunt)



                <div class="section1">
                    <div class="form-group">
                        <div class="sell_title">Marca Auto</div>
                        <div class="sell_title1">@Html.DropDownListFor(model => model.ID_Marca, new SelectList(Model.MarcaAnunt, "ID_Marca", "Marca"))</div>
                    </div>
                    <div class="form-group">
                        <div class="sell_title">Model Auto</div>
                        <div class="sell_title1">@Html.DropDownListFor(model => model.ID_Model, new SelectList(Model.ModelAnunt, "ID_Model", "Model"))</div>
                    </div>
                    <div class="form-group">
                        <div class="sell_title">Tip Caracteristica </div>
                        <div class="sell_title1">
                            @Html.DropDownListFor(model => model.ID_TipCaracteristica, new SelectList(Model.TipCaracteristicaAnunt, "ID_TipCaracteristica", "NumeTipCaracteristica"))
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="sell_title">Caracteristica</div>
                        <div class="sell_title1">
                            @Html.DropDownListFor(model => model.ID_Caracteristica, new SelectList(Model.CaracteristicaAnunt, "ID_Caracteristica", "NumeCaracteristica"))
                        </div>
                    </div>
                </div>



                <div class="section2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.KM, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-xs-10">
                            @Html.EditorFor(model => model.KM, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KM, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Pret, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-xs-10">
                            @Html.EditorFor(model => model.Pret, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Pret, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AnFabricatie, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-xs-10">
                            @Html.EditorFor(model => model.AnFabricatie, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AnFabricatie, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Descriere, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-xs-10">
                            @Html.EditorFor(model => model.Descriere, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descriere, "", new { @class = "text-danger" })
                        </div>
                        </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.DescriereScurta, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-xs-10">
                            @Html.EditorFor(model => model.DescriereScurta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DescriereScurta, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                   

                    <div class="section3">
                        <div class="section3A">
                        <span>Adauga imagini</span>
                        <input type="file" name="ImageFile" class="custom-file-input" required multiple/>
                        </div>
                        <div class="btn-add"><input type="submit" value="Create" class="btn btn-default " /></div>
                    </div>



                </div>


                @*This script is required to display the selected file in the file upload element*@


            }
        </div>

    </div>

















@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
