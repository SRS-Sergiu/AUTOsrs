@model AUTOsrs.ViewModels.AdminTipCaracteristiciViewModel



@{
    ViewBag.Title = "Creare Tip Caracteristica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adaugare Model</h2>

@using (Html.BeginForm("SaveTipCaracteristica", "AdminTipCaracteristica", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID_TipCaracteristica)
    <div class="form-group">
        @Html.LabelFor(model => model.NumeTipCaracteristica, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NumeTipCaracteristica, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NumeTipCaracteristica, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}